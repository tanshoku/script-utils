#!/bin/sh
#
# Author:       Elizabeth Bodaneze 2018
# Description:  Start a tmux or attach to session 0 if it exists
# Requires:     tmux
# Usage:        tmux_start

#term_command=urxvt
#key=-e

term_command=xfce4-terminal
key=-x

if sessions=$(tmux ls) ; then
  session=$(echo $sessions | head -c 1)
  $term_command $key tmux attach -c $session &
else
  $term_command $key tmux &
fi

exit 0
